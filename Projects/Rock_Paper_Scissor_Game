import java.util.Random;
import java.util.Scanner;

public class Rock_Paper_Scissor_Game {
    public static void main(String[] args) {
        Scanner input_1 = new Scanner(System.in);
        Random input_2 = new Random();

        System.out.println("ğŸ® Welcome to Rock-Paper-Scissors Game!");
        System.out.println("Choose: 1 for Rock ğŸª¨, 2 for Paper ğŸ“„, 3 for Scissors âœ‚ï¸, 4 to Exit ğŸšª");

        int userChoice;

        // Game loop
        do {
            // Get user choice
            System.out.print("\nEnter your choice: ");
            userChoice = input_1.nextInt();

            // Check if user wants to exit
            if (userChoice == 4) {
                System.out.println("ğŸ‘‹ Thanks for playing! Bye.");
                break;
            }

            // Validate input
            if (userChoice < 1 || userChoice > 4) {
                System.out.println("âŒ Invalid input! Please choose 1, 2, 3, or 4.");
                continue;
            }

            // âœ… FIXED: Use input_2 (Random) instead of input_1 (Scanner)
            int computerChoice = 1 + input_2.nextInt(3);

            // Display choices
            System.out.println("You chose: " + choiceToString(userChoice));
            System.out.println("Computer chose: " + choiceToString(computerChoice));

            // Determine the winner
            if (userChoice == computerChoice) {
                System.out.println("ğŸ¤ It's a Tie!");
            } else if ((userChoice == 1 && computerChoice == 3) ||
                    (userChoice == 2 && computerChoice == 1) ||
                    (userChoice == 3 && computerChoice == 2)) {
                System.out.println("ğŸ‰ You Win!");
            } else {
                System.out.println("ğŸ’» Computer Wins!");
            }

        } while (userChoice != 4); // Continue until user selects 4 to exit

        input_1.close();
    }

    // Helper method to convert number to Rock, Paper, or Scissors
    public static String choiceToString(int choice) {
        switch (choice) {
            case 1: return "Rock ğŸª¨";
            case 2: return "Paper ğŸ“„";
            case 3: return "Scissors âœ‚ï¸";
            default: return "Invalid";
        }
    }
}

