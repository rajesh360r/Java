import java.util.Scanner;
public class Atm_Machine_Stimulation {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int balance = 5000; // Initial balance
        int pin = 1234; // Hardcoded PIN for demo
        int userPin;
        int choice;

        System.out.println("💳 Welcome to Simple ATM Simulator");

        // PIN verification
        System.out.print("Enter your 4-digit PIN: ");
        userPin = input.nextInt();

        if (userPin != pin) {
            System.out.println("❌ Incorrect PIN! Access Denied.");
            return;
        }

        System.out.println("✅ PIN Verified. Login Successful!");

        // Menu loop
        do {
            System.out.println("\n===== ATM MENU =====");
            System.out.println("1. Check Balance");
            System.out.println("2. Deposit");
            System.out.println("3. Withdraw");
            System.out.println("4. Exit");
            System.out.print("Enter your choice: ");
            choice = input.nextInt();

            switch (choice) {
                case 1:
                    System.out.println("💰 Your current balance: ₹" + balance);
                    break;

                case 2:
                    System.out.print("Enter amount to deposit: ₹");
                    int deposit = input.nextInt();
                    if (deposit > 0) {
                        balance += deposit;
                        System.out.println("✅ ₹" + deposit + " deposited successfully.");
                    } else {
                        System.out.println("❌ Invalid amount. Try again.");
                    }
                    break;

                case 3:
                    System.out.print("Enter amount to withdraw: ₹");
                    int withdraw = input.nextInt();
                    if (withdraw > 0 && withdraw <= balance) {
                        balance -= withdraw;
                        System.out.println("✅ ₹" + withdraw + " withdrawn successfully.");
                    } else if (withdraw > balance) {
                        System.out.println("❌ Insufficient Balance.");
                    } else {
                        System.out.println("❌ Invalid amount. Try again.");
                    }
                    break;

                case 4:
                    System.out.println("👋 Thank you for using ATM Simulator. Goodbye!");
                    break;

                default:
                    System.out.println("❌ Invalid choice. Please try again.");
            }

        } while (choice != 4);

        input.close();
    }
}
