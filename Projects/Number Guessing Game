import java.util.Random;
import java.util.Scanner;

public class Number_Guessing_game {
    public static void main(String[] args) {
        Scanner input_1 = new Scanner(System.in);
        Random input_2 = new Random();

        // Generate random number between 1 and 10
        int secretNumber = input_2.nextInt(10) + 1;
        int guess;
        int attempts = 0;
        boolean guessedCorrectly = false;

        System.out.println("ğŸ¯ Welcome to the Number Guessing Game!");
        System.out.println("I have selected a number between 1 and 10.");
        System.out.println("Can you guess what it is? ğŸ¤”");

        // Loop until the user guesses correctly
        while (!guessedCorrectly) {
            System.out.print("\nEnter your guess: ");
            guess = input_1.nextInt();
            attempts++;

            if (guess < 1 || guess > 100) {
                System.out.println("âŒ Please guess a number between 1 and 10.");
            } else if (guess < secretNumber) {
                System.out.println("ğŸ“‰ Too low! Try again.");
            } else if (guess > secretNumber) {
                System.out.println("ğŸ“ˆ Too high! Try again.");
            } else {
                System.out.println("ğŸ‰ Congratulations! You guessed it right.");
                System.out.println("âœ… The number was: " + secretNumber);
                System.out.println("ğŸ“Š You guessed it in " + attempts + " attempts.");
                guessedCorrectly = true;
            }
        }

        System.out.println("\nThanks for playing! ğŸ‘‹");
        input_1.close();
    }
}
